{
  "app": {
    "name": "APP_NAME",
    "feUrl": "APP_FE_URL"
  },
  "database": {
    "mongo": {
      "uri": "DATABASE_URI"
    }
  },
  "server": {
    "port": "SERVER_PORT"
  },
  "auth": {
    "secret": "AUTH_TOKEN_SECRET_KEY",
    "tokenExpiresIn": "AUTH_TOKEN_EXPIRES_IN",
    "passwordResetLinkDuration": "PASSWORD_RESET_LINK_DURATION",
    "emailVerificationLinkDuration": "EMAIL_VERIFICATION_LINK_DURATION"
  },
  "mail": {
    "driver": "MAIL_DRIVER",
    "user": "MAIL_USER",
    "password": "MAIL_PASSWORD",
    "host": "MAIL_HOST",
    "port": {
      "name": "MAIL_PORT",
      "type": "number"
    },
    "service": "MAIL_SERVICE",
    "secure": "MAIL_SECURE",
    "authType": "MAIL_AUTH_TYPE",
    "tlsCiphers": "MAIL_TLS_CIPHERS",
    "tlsRejectUnauthorized": "MAIL_TLS_REJECT_UNAUTHORIZED",
    "clientId": "MAIL_CLIENT_ID",
    "clientSecret": "MAIL_CLIENT_SECRET",
    "refreshToken": "MAIL_REFRESH_TOKEN",
    "accessToken": "MAIL_ACCESS_TOKEN",
    "expires": "MAIL_EXPIRES"
  },
  "cache": {
    "driver": "CACHE_DRIVER",
    "redis": {
      "port": {
        "name": "REDIS_PORT",
        "type": "number"
      },
      "host": "REDIS_HOST",
      "password": "REDIS_PASSWORD",
      "database": {
        "name": "REDIS_DATABASE",
        "type": "number"
      }
    }
  },
  "fileSystem": {
    "storageDriver": "FILESYSTEM_STORAGE_DRIVER",
    "maxUploadLimit": {
      "name": "FILESYSTEM_MAX_FILE_UPLOAD_LIMIT",
      "type": "number"
    },
    "s3": {
      "bucket": "S3_BUCKET_NAME",
      "region": "S3_REGION",
      "accessKeyId": "S3_ACCESS_KEY_ID",
      "secretAccessKey": "S3_SECRET_ACCESS_KEY",
      "retryMode": "S3_RETRY_MODE",
      "maxRetryAttempts": {
        "name": "S3_MAX_RETRY_ATTEMPTS",
        "type": "number"
      },
      "cloudfront": {
        "domainName": "S3_CF_DOMAIN_NAME",
        "publicKeyId": "S3_CF_PUBLIC_KEY_ID",
        "privateKeyString": "S3_CF_PRIVATE_KEY_STRING",
        "signedUrlDurationInSeconds": {
          "name": "S3_CF_SIGNED_URL_DURATION",
          "type": "number"
        }
      }
    },
    "local": {
      "urlSignerSecret": "LOCAL_URL_SIGNER_SECRET",
      "signedUrlDurationInSeconds": {
        "name": "LOCAL_SIGNED_URL_DURATION",
        "type": "number"
      }
    }
  },
  "logger": {
    "disabled": {
      "name": "LOGGING_DISABLED",
      "type": "boolean"
    }
  }
}
