{
  "name": "men-mvc",
  "version": "1.0.0",
  "description": "MEN MVC application.",
  "homepage": "https://menmvc.com",
  "main": "src/start.ts",
  "scripts": {
    "clean": "rimraf dist/",
    "build:copy:env-config-files": "cp -rf envConfigs dist/envConfigs",
    "build:copy:view-files": "cp -rf src/views dist/",
    "build:extract-src": "cp -rf dist/src/ dist/ && rm -rf dist/src/",
    "build": "npm run clean && mkdir dist && npx tsc && npm run build:copy:env-config-files && npm run build:copy:view-files && npm run build:extract-src",
    "start": "node dist/start.js",
    "dev": "ts-node-dev src/start.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --config .prettierrc . --write",
    "test": "jest --testPathPattern=tests --runInBand --forceExit",
    "test:coverage": "jest --testPathPattern=tests --runInBand --coverage --forceExit"
  },
  "keywords": [],
  "author": "Wai Yan Hein",
  "license": "ISC",
  "dependencies": {
    "@men-mvc/foundation": "^0.122.0",
    "@men-mvc/mail": "^0.122.0",
    "@men-mvc/logger": "^0.122.0",
    "@typegoose/typegoose": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@men-mvc/test": "^0.122.0",
    "@faker-js/faker": "^7.6.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express-rate-limit": "^6.0.0",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^29.2.4",
    "@types/jest-expect-message": "^1.1.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.192",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.16",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.34.0",
    "jest": "^29.3.1",
    "jest-expect-message": "^1.1.3",
    "mockdate": "^3.0.5",
    "prettier": "^2.8.1",
    "rimraf": "^4.4.1",
    "sinon": "^15.0.1",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
